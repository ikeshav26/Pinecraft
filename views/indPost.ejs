<%- include('./partials/header.ejs') %>
<div class="w-full min-h-screen bg-gradient-to-b from-zinc-900 via-zinc-800 to-zinc-700 px-10 py-16 flex flex-col items-center">
    <h1
        class="mt-14 mb-12 px-8 py-4 w-auto text-center rounded-tl-3xl rounded-br-3xl text-white font-extrabold text-5xl bg-gradient-to-r from-red-600 via-red-500 to-red-400 shadow-lg">
        YOUR POST
    </h1>
    <div class="text-white flex  items-center justify-center gap-10">
        <div class="w-full lg:w-1/2 h-96 bg-gradient-to-r from-sky-300 to-sky-500 rounded-lg overflow-hidden shadow-xl">
            <img class="bg-cover w-full h-full bg-no-repeat transform hover:scale-105 transition duration-500"
                src="/images/<%= post.image %>" alt="Image not found">
        </div>
        <div class="flex flex-col items-start gap-6 lg:w-1/2">
            <div class="bg-zinc-800 p-6 rounded-lg shadow-md w-full">
                <h2 class="text-2xl font-semibold text-red-400 mb-2">Title:</h2>
                <h1 class="text-4xl font-bold text-white">
                    <%= post.title %>
                </h1>
            </div>
            <div class="bg-zinc-800 p-6 rounded-lg shadow-md w-full">
                <h2 class="text-2xl font-semibold text-red-400 mb-2">Description:</h2>
                <p class="text-lg text-gray-300">
                    <%= post.description %>
                </p>
            </div>
        </div>
    </div>
</div>
<%- include('./partials/footer.ejs') %>