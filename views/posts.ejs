<%- include('./partials/header.ejs') %>
<div class="w-full min-h-screen  bg-zinc-800 px-10 py-8 text-white">
    <div class="cards flex flex-wrap gap-10 mt-25">
        <% user.posts.forEach(function(elem) { %>
            <a href="/posts/<%= elem._id %>" >
            <div class="card w-32">
                <div class="w-full h-40 bg-sky-200 rounded-lg  overflow-hidden">
                    <img class="bg-cover w-full h-full bg-no-repeat" src="/images/<%= elem.image %>" alt="Image not found">
                </div>
                <h5 class="mt-2 text-sm"><%= elem.title %></h5>
            </div>
            </a>
        <% }) %>
    </div>
</div>
<%- include('./partials/footer.ejs') %>