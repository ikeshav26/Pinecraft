<%- include('./partials/header.ejs') %>
<div class=" w-full h-screen bg-cover bg-[url('./images/bg.png')] flex items-center justify-center ">
    <div class="w-[450px]  backdrop-blur-3xl fixed px-4 py-5 rounded-[30px] flex flex-col items-center ">
        <div class="flex flex-col items-center justify-center">
            <img src="/images/pc.logo.png" class="rounded-full w-14 h-14 mb-2">
            <h1 class="font-semibold text-4xl tracking-tighter leading-none capitalize text-zinc-200">Welcome to pinecraft</h1>
        </div>
        <form action="/login" method="post" class="mt-4  ">
            <div class="mt-2">
                <p class="text-zinc-200 text-sm ml-3">username</p>
                <input class="block w-full px-3 py-2 border-2 text-white border-zinc-400 placeholder-zinc-200 focus:text-zinc-100 rounded-full" type="text" name="username" placeholder="username">
            </div>
            <div class="mt-2">
                <p class="text-zinc-200 text-sm ml-3">Password</p>
                <input class="block  w-full px-3 py-2 border-2 text-white border-zinc-400 placeholder-zinc-200 focus:text-zinc-100 rounded-full" type="password" name="password" placeholder="password">
            </div>
            <div class="mt-3">
                <a class="cursor-pointer ml-3 mb-1 inline-block text-zinc-400">Forgot password ?</a>
                <button class="block w-full px-3 py-2 bg-red-900 text-zinc-100 rounded-full cursor-pointer" type="submit">Log in</button>
            </div>
            <div class="mt-3 pb-2 border-b-1 border-zinc-300">
                <p class="text-sm text-center leading-4 text-zinc-200 tracking-tight">By continuing, you agree to Pinecraft's
                    <span class="block"><b class="text-zinc-500 ">Terms of Service</b> and acknowldege that you've</span>
                    <span class="block">read our <b class="text-zinc-400">Privacy Policy Notice at collection.</b></span>
                </p>
            </div>
            <div class="mt-2 flex items-center justify-center gap-3">
                <b class="text-sm text-zinc-200 flex items-center justify-center">Not on Pinecraft yet ? </b>
                <a class="cursor-pointer  text-white" href="/">Sign up</a>
            </div>
        </form>
    </div>
</div>
<%- include('./partials/footer.ejs') %>