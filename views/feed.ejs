<%- include('./partials/header.ejs') %>
<div class="w-full min-h-screen bg-gradient-to-b from-zinc-900 via-zinc-800 to-zinc-700 px-10 py-8 text-white">
    <h1 class="text-4xl font-bold text-center mb-10 text-white">Explore the Feed</h1>
    <div class="cards grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-10">
        <% posts.forEach(function(elem) { %>
            <a href="/posts/<%= elem._id %>" class="transform hover:scale-105 transition duration-300">
                <div class="card bg-zinc-800 rounded-lg shadow-lg overflow-hidden">
                    <div class="w-full h-50 bg-gradient-to-r from-sky-300 to-sky-500 rounded-t-lg overflow-hidden">
                        <img class="bg-cover w-full h-full bg-no-repeat" src="/images/<%= elem.image %>" alt="Image not found">
                    </div>
                    <div class="p-4">
                        <h5 class="text-lg font-semibold text-white truncate"><%= elem.title %></h5>
                        <p class="text-sm text-zinc-400 mt-1">By: <%= elem.user.username %></p>
                    </div>
                </div>
            </a>
        <% }) %>
    </div>
</div>
<%- include('./partials/footer.ejs') %>